#
# For a description of the syntax of this configuration file,
# see kconfig-language at https://www.kernel.org/doc/Documentation/kbuild/kconfig-language.txt
#

menuconfig CODEC_LIBOPUS
	bool "libopus 1.2.1"
	default y
	depends on AUDIO_CODEC
	---help---
		select to enable the libopus library

if CODEC_LIBOPUS

comment "OPUS Config Parameters"

config OPUS_CODEC_PTHREAD
	bool "enable opus codec threads"
	default y
	---help---
		select to enable the opus codec threads

config OPUS_DECODE_PTHREAD_STACKSIZE
	int "Default pthread stack size for opus decoding thread"
	default 49152
	depends on OPUS_CODEC_PTHREAD
	---help---
		Default pthread stack size for opus decoding thread

config OPUS_ENCODE_PTHREAD_STACKSIZE
	int "Default pthread stack size for opus encoding thread"
	default 49152
	depends on OPUS_CODEC_PTHREAD
	---help---
		Default pthread stack size for opus encoding thread

endif # CODEC_LIBOPUS

